<COMPONENT>

	<HEADER PLATEFORM="ALL" SERIAL="" VERSION="0.1" STATUS="ALPHA" COMPATIBILITY="ALL" AUTHOR="Talend" RELEASE_DATE="20220510A" STARTABLE="false">
		<SIGNATURE />
	</HEADER>

	<FAMILIES>
		<FAMILY>Connectivity/Database</FAMILY>
	</FAMILIES>

	<DOCUMENTATION>
		<URL>https://camel.apache.org/components/3.11.x/json-validator-component.html</URL>
	</DOCUMENTATION>

	<CONNECTORS>
		<CONNECTOR CTYPE="ROUTE" MAX_INPUT="0" MAX_OUTPUT="0" />
	</CONNECTORS>

	<PARAMETERS>
		<PARAMETER NAME="DRIVER_CLASS_NAME" FIELD="TEXT" NUM_ROW="9" REQUIRED="true">
			<DEFAULT>"org.postgresql.Driver"</DEFAULT>
		</PARAMETER>
		<PARAMETER NAME="DRIVER_JAR" FIELD="TABLE" NUM_ROW="10"
			NB_LINES="2" REPOSITORY_VALUE="DRIVER_JAR" REQUIRED="false">
			<ITEMS>
				<ITEM NAME="JAR_NAME" FIELD="MODULE_LIST" />
			</ITEMS>
		</PARAMETER>
		<PARAMETER NAME="JDBC_URL" FIELD="TEXT" NUM_ROW="11" REQUIRED="false">
			<DEFAULT>"jdbc:"</DEFAULT>
		</PARAMETER>
		<PARAMETER NAME="AUTH_REQUIRED" FIELD="CHECK" REQUIRED="true" NUM_ROW="15">
			<DEFAULT>false</DEFAULT>
		</PARAMETER>
		<PARAMETER NAME="SQL_USERNAME" FIELD="TEXT" NUM_ROW="16" REQUIRED="false" SHOW_IF="AUTH_REQUIRED == 'true'">
			<DEFAULT>"sa"</DEFAULT>
		</PARAMETER>
		<PARAMETER NAME="SQL_PASSWORD" FIELD="PASSWORD" NUM_ROW="16" REQUIRED="false" SHOW_IF="AUTH_REQUIRED == 'true'">
			<DEFAULT>""</DEFAULT>
		</PARAMETER>
		<PARAMETER NAME="USE_DATA_SOURCE_ALIAS" FIELD="CHECK" NUM_ROW="20">
			<DEFAULT>true</DEFAULT>
		</PARAMETER>
		<PARAMETER NAME="DATA_SOURCE_ALIAS" FIELD="TEXT" NUM_ROW="22" REQUIRED="true" SHOW_IF="USE_DATA_SOURCE_ALIAS == 'true'">
			<DEFAULT>"jdbc/mydatasource"</DEFAULT>
		</PARAMETER>
	</PARAMETERS>

	<ADVANCED_PARAMETERS>
	</ADVANCED_PARAMETERS>

	<CODEGENERATION>
		<IMPORTS>
			<IMPORT MODULE="camel-jdbc-${camel.version}.jar" MVN="mvn:org.apache.camel/camel-jdbc/${camel.version}" NAME="camel-jdbc-${camel.version}.jar" UrlPath="platform:/plugin/org.talend.designer.camel.components.localprovider/lib/camel-jdbc-${camel.version}.jar" REQUIRED="true"/>
			<IMPORT MODULE="camel-sql-${camel.version}.jar" MVN="mvn:org.apache.camel/camel-sql/${camel.version}" NAME="camel-sql-${camel.version}.jar" UrlPath="platform:/plugin/org.talend.designer.camel.components.localprovider/lib/camel-sql-${camel.version}.jar" REQUIRED="true"/>
			<IMPORT MODULE="commons-dbcp2-${commons-dbcp2.version}.jar" MVN="mvn:org.apache.commons/commons-dbcp2/${commons-dbcp2.version}" NAME="commons-dbcp2-${commons-dbcp2.version}.jar" UrlPath="platform:/plugin/org.talend.designer.camel.components.localprovider/lib/commons-dbcp2-${tesb-commons-dbcp2}.jar" REQUIRED="true"/>
			<IMPORT MODULE="commons-pool2-${commons-pool2.version}.jar" MVN="mvn:org.apache.commons/commons-pool2/${commons-pool2.version}" NAME="commons-pool2-${commons-pool2.version}.jar" UrlPath="platform:/plugin/org.talend.designer.camel.components.localprovider/lib/commons-pool2-${tesb-commons-pool2}.jar" REQUIRED="true"/>
		</IMPORTS>
	</CODEGENERATION>

	<RETURNS />
</COMPONENT>
